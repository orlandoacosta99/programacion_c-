@model CompraloTo.ViewModels.ActivationEmailViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Email/_LayoutEmail.cshtml";
}


<div style="text-align:justify;padding:5px;clear:both;margin-bottom:10px;">
    <h3>
        Bienvenido a CompraloTó
    </h3>
</div>


<div style="text-align:justify;padding:5px;clear:both;margin-bottom:10px;">
    <h3>
        Haga click en el siguiente enlace para activar su cuenta
    </h3>
    <a href="http://localhost:5050/account/activate?email=@(Url.Encode(Model.email))&token=@(Url.Encode(Model.token))">Activar</a>
</div>
